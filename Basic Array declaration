#include<stdio.h>
int main ()
{
    int n,array[100],i;
//Declare an array size

    printf("Enter your array size: ");
    scanf("%d",&n);

//Declare loop for Array, take its elements

    printf("\nEnter your array elements below\n ");

    for(i=0; i<n; i++)
    {
        printf("\n Your Element no. %d is - ", i+1);
        scanf("%d",&array[i]);

    }
//Display your Array

    printf("Your array looks like: ");

    for(i=0; i<n; i++)
    {
        printf(" %d",array[i]);

    }

    return 0;
}
